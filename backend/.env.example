# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/matrimony

# MongoDB Atlas (Production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/matrimony?retryWrites=true&w=majority

# JWT Secret Key (Change this in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_characters

# Cloudinary Configuration (Required for Image Uploads)
# Sign up at: https://cloudinary.com/users/register/free
# Get your credentials from: https://console.cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# File Upload Configuration (Cloudinary handles these, but kept for reference)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Razorpay Configuration (Get from https://dashboard.razorpay.com/)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# CORS Configuration (Optional)
# CORS_ORIGIN=http://localhost:3000
